# Matrix Calculator Web Application Environment Configuration
# ==========================================================

# Server Configuration
PORT=8080
NODE_ENV=development

# Application Settings
APP_NAME=Matrix Calculator
APP_VERSION=1.0.0

# API Configuration
API_BASE_URL=http://localhost:8080/api
API_VERSION=v1

# Security Keys (Add your actual keys here)
# JWT_SECRET=your_jwt_secret_key_here
# SESSION_SECRET=your_session_secret_here
# ENCRYPTION_KEY=your_encryption_key_here

# Database Configuration (if needed in future)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=matrix_calculator
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password

# External API Keys (Add as needed)
# MATH_API_KEY=your_math_api_key
# ANALYTICS_API_KEY=your_analytics_key

# CORS Configuration
CORS_ORIGIN=http://localhost:8080
ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=100

# Feature Flags
ENABLE_MATRIX_2X2=true
ENABLE_MATRIX_3X3=true
ENABLE_EQUATION_SOLVER_2_UNKNOWN=true
ENABLE_EQUATION_SOLVER_3_UNKNOWN=true
ENABLE_EQUATION_SOLVER_4_UNKNOWN=true
ENABLE_ANALYTICS=false
ENABLE_DEBUG_MODE=true
